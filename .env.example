# Server Information
# Name of the MCP server
SERVER_NAME=document-archive-mcp-server

# Version of the MCP server
SERVER_VERSION=1.0.0

# Server Capabilities
# Enable resources capability (true/false)
ENABLE_RESOURCES=true

# Enable tools capability (true/false)
ENABLE_TOOLS=true

# Enable prompts capability (true/false)
ENABLE_PROMPTS=true

# Transport Configuration
# Transport type: 'stdio' or 'sse'
TRANSPORT_TYPE=stdio

# Port for the SSE transport (if using SSE)
PORT=3000

# Logger Configuration
# Valid values: error, warn, info, debug
LOG_LEVEL=info

# Directory where log files will be stored
LOG_DIR=logs

# Name of the main log file that contains all log levels
LOG_FILE=combined.log

# Name of the log file that contains only errors
ERROR_LOG_FILE=error.log

# Enable file logging even in development mode (true/false)
ENABLE_FILE_LOGGING=false

# Node Environment (development, production, test)
NODE_ENV=development

# Document Processing Configuration
# Comma-separated list of directories to watch for documents
DOCUMENT_DIRECTORIES=

# Size of document chunks for processing
DOCUMENT_CHUNK_SIZE=1000

# Overlap size for document chunks
DOCUMENT_CHUNK_OVERLAP=200

# Separator for document chunks (default: "\n\n", "\n", " ", "")
DOCUMENT_CHUNK_SEPERATOR="\n\n,\n, ,"

# File extensions to process (comma-separated)
FILE_EXTENSIONS=.txt,.md,.pdf,.docx,.doc,.csv,.json

# Watch existing files in directories (true/false)
WATCH_EXISTING_FILES=false

# Embedding Configuration
# Embedding model to use
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# LanceDB Configuration
# Path to LanceDB database
LANCEDB_PATH=./vectordb